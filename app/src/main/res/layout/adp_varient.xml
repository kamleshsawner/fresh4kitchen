<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@color/colorAccentdark"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_adpprodet_percentage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/offer_bg"
                android:gravity="center"
                android:text="15 %"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_adpprodet_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:text="5 kg"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_adpprodet_offerprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Rs. 100"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpprodet_actulprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 150"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <RadioButton
            android:layout_gravity="center"
            android:id="@+id/rb_adpprodet_button"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
